<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSignup.MakeSelection"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/general_back_icon"
            android:padding="5dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make\nSelection"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:fontFamily="@font/doppio_one"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select which contact detail should we use to reset your password"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:fontFamily="@font/doppio_one"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="30dp"
            android:background="#f5f5f5"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mobile_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/mobile"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>
            
            <TextView
                android:id="@+id/mobile-title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/mobile_icon"
                android:text="via SMS"
                android:textSize="25sp"
                android:fontFamily="@font/doppio_one"
                android:layout_marginTop="45dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/mobile-desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/mobile_icon"
                android:text="+919899380212"
                android:textSize="25sp"
                android:fontFamily="@font/doppio_one"
                android:layout_marginTop="75dp"
                android:textColor="#000"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:background="#f5f5f5"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mail_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/email"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/mail-title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/mail_icon"
                android:text="via Email"
                android:textSize="25sp"
                android:fontFamily="@font/doppio_one"
                android:layout_marginTop="45dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/mail-desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/mail_icon"
                android:text="ishaanbajaj12@gmail.com"
                android:textSize="20sp"
                android:fontFamily="@font/doppio_one"
                android:layout_marginTop="75dp"
                android:textColor="#000"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"/>
        </RelativeLayout>


    </LinearLayout>



</ScrollView>